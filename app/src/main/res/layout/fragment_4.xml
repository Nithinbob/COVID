<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Fragment1">
    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="129dp"
        android:layout_height="135dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="400dp"
        android:innerRadiusRatio="2.5"
        android:progressDrawable="@drawable/circle3"
        android:thickness="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/www"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/www"/>


        <ImageView
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            app:icon="@drawable/twitter"
            android:src="@drawable/face1"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/twitter" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Emergency No :"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Toll Free No :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=" Email :"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text4"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="+91-11-23978046"
            android:textColor="#3654FF"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="1075"
            android:textColor="#3654FF"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ncov2019@gov.in"
            android:textAllCaps="false"
            android:textColor="#3654FF"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="220dp"

    >
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycle4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:listitem="@layout/cardview4"></androidx.recyclerview.widget.RecyclerView>

</ScrollView>
</RelativeLayout>