<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimary"

        android:orientation="horizontal"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardpositive"
                android:layout_width="132dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:text=" Positive cases"
                android:textColor="#FF872B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardpositivenum"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Loading"
                android:textColor="#FF9800"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carddate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="  Date "
                android:textColor="#FF9800"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/totalIndividualsTested"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="IndividualTested"

                android:textColor="#FF9800"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardindivdualtestednum"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="Loading"
                android:textColor="#FF9800"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardsamplestested"
                android:layout_width="130dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Samlpes tested"
                android:textColor="#F8B109"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardsamplestestednum"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Loading"
                android:textColor="#FF9800"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>